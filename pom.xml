		</repository>

		<repository>
			<snapshots />
			<id>repo.auraframework.org-chromedriver</id>
			<url>http://repo.auraframework.org/chromedriver</url>
		</repository>

		<repository>
			<id>phloc.com</id>
			<url>http://repo.phloc.com/maven2</url>
		</repository>
	</repositories>

	<dependencies>
