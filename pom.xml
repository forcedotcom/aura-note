	<!-- these properties can be set by passing in -D<property_name>=<property_value> -->
	<properties>
		<aura.framework.version>0.2841</aura.framework.version>
		<selenium.version>2.43.1</selenium.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<webdriver.chrome.driver>${basedir}/bin/chromedriverlauncher</webdriver.chrome.driver>
		<chromedriver.url>http://chromedriver.storage.googleapis.com/{version}/{artifactId}_{classifier}.zip</chromedriver.url>
		<chromedriver.version>2.9</chromedriver.version>
		<webdriver.reusebrowser>true</webdriver.reusebrowser>
		<webdriver.remote.server /> <!-- http://localhost:4444/wd/hub/ -->
		<webdriver.reusebrowser>true</webdriver.reusebrowser>
		<webdriver.browser.type>GOOGLECHROME</webdriver.browser.type> <!-- refer to org.auraframework.test.WebDriverUtil.BrowserType enums for 
			valid values -->
		<sauce.record.video>false</sauce.record.video>
		<sauce.record.screenshots>false</sauce.record.screenshots>
		<xdisplay.exec>Xvfb</xdisplay.exec>
		<xdisplay.options>-ac</xdisplay.options>
		<xdisplay.size>960x640</xdisplay.size>
		<jetty.idleWait>60000</jetty.idleWait>
		<jetty.scanInterval>0</jetty.scanInterval>
		<aura.home>${basedir}</aura.home>
		<skipUnitTests>false</skipUnitTests>
	</properties>

