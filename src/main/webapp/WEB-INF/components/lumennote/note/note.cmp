<lumen:component abstract="true" provider="js://lumennote.note">
	<lumen:attribute name="mode" type="String" default="view" />
	<lumen:attribute name="note"
		type="java://org.lumenframework.demo.notes.Note" />
	<lumen:attribute name="sort" type="String" />

	<lumen:attribute name="buttons" type="Lumen.Component[]" />
	<lumen:attribute name="title" type="Lumen.Component[]" />
	<lumen:attribute name="tags" type="Lumen.Component[]" />
	<lumen:attribute name="masked" type="boolean" />

	<article class="content">
		<ui:vbox>
			<lumen:set attribute="north">
				<ui:block class="header">
					<h2 class="noteTitle">{!v.title}</h2>
					<lumen:set attribute="right">{!v.buttons}</lumen:set>
				</ui:block>
				<ul class="tags">
					<lumen:renderIf isTrue="{!v.note.latitude != null}">
						<ui:button class="locationButton" iconClass="icon"
							press="{!c.togggleLocationImages}">
					    	Location set: {!v.note.longitude+', '+v.note.latitude}
					    	<a
								href="{!'http://maps.google.com/?q='+v.note.latitude+','+v.note.longitude}"
								target="_new" class="locationImages" lumen:id="locImages"> <img
								src="{!'http://maps.googleapis.com/maps/api/staticmap?center='+v.note.latitude+','+v.note.longitude+'&amp;zoom=11&amp;size=100x100&amp;sensor=false'}" />
								<img
								src="{!'http://maps.googleapis.com/maps/api/streetview?size=100x100&amp;location='+v.note.latitude+','+v.note.longitude+'&amp;sensor=false'}" />
							</a>
						</ui:button>
					</lumen:renderIf>
					{!v.tags}

					<!--
			    	Tags: 
			    	<li class="tag">green</li>
			    	<li class="tag">periwinkle</li>
			    	<li class="tag">burnt sienna</li>
			    	-->
				</ul>
			</lumen:set>
			<ui:scroller>
				<div class="{!v.masked ? 'mask' : ''}">&nbsp;</div><p class="noteBody">{!v.body}</p>
			</ui:scroller>
		</ui:vbox>
	</article>
</lumen:component>
