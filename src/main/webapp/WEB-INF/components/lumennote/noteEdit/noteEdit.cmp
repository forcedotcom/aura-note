<lumen:component extends="lumennote:note" controller="java://org.lumenframework.demo.notes.controllers.NoteEditController" >
	<lumen:set attribute="class" value="edit"/>
    <lumen:set attribute="buttons">
    	<ui:button label="Cancel" press="{!c.cancel}"/>
    	<ui:button label="Save" press="{!c.save}" class="preferred"/>
	</lumen:set>
	<lumen:set attribute="title">
		<ui:inputText value="{!v.note.title}" lumen:id="title" placeholder="Note Title"/>
	</lumen:set>
	<lumen:set attribute="tags">
	    <lumen:renderIf isTrue="{!v.note.latitude == null}">
			<ui:button label="Set Location" press="{!c.setLocation}" class="locationButton" iconClass="icon"/>
	    </lumen:renderIf>
	</lumen:set>
	<lumen:set attribute="body">
		<lumennote:inputRichText value="{!v.note.body}"/>	
	</lumen:set>
</lumen:component>
